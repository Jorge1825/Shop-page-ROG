<div class="img-background-signin row bg-dark mx-0 my-0 min-vh-100 justify-content-center align-items-center">
    <div class="col-md-7 col-12 col-sm-7 col-lg-4 mx-auto">
        <div class="card target">
            <div class="col-12 text-light fw-bold pt-3 z-1 text-center fs-3">
                BIENVENIDO
            </div>
            <img src="/img/logoNotify.png" class="rounded-circle mx-auto logo img-fluid mt-5 mb-3 z-1" alt="logo.png">
            <div class="card-body z-1 w-75">
                <form action="/users/signin" method="POST" id="form-signIn" onsubmit="return submitSign()">

                    <div class="form-group mt-2 boxInput ">
                        <input onblur="validateEmail(this.value,this.id)" type="text" name="email" id="emailSignIn"
                            class="form-control " placeholder="" required oninvalid="return false">
                        <span>Ingrese su correo</span>
                        <p id="emailSignInText" class="d-none">Ingrese un correo valido</p>
                        <i></i>
                    </div>
                    <div class="form-group mt-2 boxInput pt-4">
                        <input onblur="validateInputsEmpty(this.value,this.id)" type="text" name="nit" id="nitSignIn"
                            class="form-control " placeholder="" required oninvalid="return false">
                        <span>Ingrese su nit</span>
                        <p id="nitSignInText" class="d-none">Ingrese un nit</p>
                        <i></i>
                    </div>
                    <div class="form-group mt-2 boxInput pt-4">
                        <input onblur="validatePassSignIn(this.value,this.id)" type="text" name="password"
                            id="passwordSignIn" class="form-control" placeholder="" oninvalid="return false" required>
                        <span>Ingrese su contraseña</span>
                        <p id="passwordSignInText" class="d-none">Ingrese una contraseña de al menos 8 caracteres</p>
                        <i></i>
                    </div>
                    <div class="form-group mt-3 pt-4 mb-2 justify-content-center d-flex">
                        <button id="btnSignIn" onclick="document.getElementById('form-signIn').onsubmit()" type="submit"
                            class="btn btn-signin w-50">Signin</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<style>
    .logo {
        width: 35%;

    }

    .img-background-signin {
        background-image: url('../img/super4.jpg');
        background-position: center center;
        background-size: cover;
        background-repeat: no-repeat;
        height: 100%;
        background-color: var(--blackColor);
    }

    .btn-signin {
        background-color: var(--redColor);
        color: white;

    }

    .btn-signin:hover {
        background-color: var(--redColor);
        color: rgb(221, 221, 221);
        box-shadow: inset 0px 0px 5px rgb(248, 248, 248)
    }

    .btn-signin:focus {
        background-color: rgb(8, 8, 8);
        color: rgb(221, 221, 221);
        box-shadow: inset 0px 0px 5px rgb(248, 248, 248)
    }
</style>