<div class="toast-container top-0 end-0 p-2">
        {{#if error}}
        <div class="toast my-2 serverError" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-body">
                <div class="row justify-content-center p-2">
                    <div class="col-1 text-danger opacity-75 fs-4 justify-content-center align-items-center d-flex">
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                    <div class="col-9">
                        {{error}}
                    </div>
                    <div class="col-2 text-center justify-content-center d-flex">
                        <button type="button" class="btn-close fs-6 " data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
                <div class="progress rounded-4" style="height: 3px;">
            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"></div>
        </div>
            </div>
        </div>
    
        {{/if}}
    </div>







